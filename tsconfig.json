{
    "compilerOptions": {
      "composite": true,
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "module": "commonjs",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": false,
      "target": "es2017",
      "outDir": "lib",
      "pretty": true,
      "resolveJsonModule": true,
      "rootDir": "src"
    },
    "include": [
      "src/**/*"
    ],
    "ts-node": {
      "transpileOnly": true
    }
}